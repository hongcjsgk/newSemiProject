DROP TABLE SEMI_MEMBER
CASCADE CONSTRAINTS;

CREATE TABLE SEMI_MEMBER(
   ID VARCHAR2(50) PRIMARY KEY,
   PWD VARCHAR2(50) NOT NULL,
   NAME VARCHAR2(50) NOT NULL,
   ADDRESS VARCHAR2(50) NOT NULL,
   EMAIL VARCHAR2(50) UNIQUE,
   PHONE VARCHAR2(50) NOT NULL,
   AUTH NUMBER(8) NOT NULL
);

----------------------
--------------------

DROP TABLE RESTAURANT
CASCADE CONSTRAINTS;

DROP SEQUENCE SEQ_RESTAURANT;

CREATE TABLE RESTAURANT(
   SEQ NUMBER(8) PRIMARY KEY,
   R_NAME VARCHAR2(50) NOT NULL,
   R_ADDRESS VARCHAR2(100) NOT NULL,
   R_PHONE VARCHAR2(50) NOT NULL,
   PARKING VARCHAR2(50) NOT NULL,
   
   OPENINGHOUR VARCHAR2(50) NOT NULL,
   BREAKTIME VARCHAR2(50) NOT NULL,
   HOLIDAY VARCHAR2(50) NOT NULL,
   
   CATEGORY VARCHAR2(50) NOT NULL,
   MENU VARCHAR2(50) NOT NULL, 
   PRICE VARCHAR2(100) NOT NULL,
   
   LIKES NUMBER(8) NOT NULL
);

CREATE SEQUENCE SEQ_RESTAURANT
START WITH 1
INCREMENT BY 1;

--------------------
--------------------

DROP TABLE SEMI_BBS
CASCADE CONSTRAINTS;

DROP SEQUENCE SEQ_SEMI_BBS;

CREATE TABLE SEMI_BBS(
   SEQ NUMBER(8) PRIMARY KEY,
   R_SEQ NUMBER(8) NOT NULL,
   ID VARCHAR2(50) NOT NULL,
   BBS_NUM NUMBER(8) NOT NULL,
   
   TITLE VARCHAR2(200) NOT NULL,
   CONTENT VARCHAR2(4000) NOT NULL,
   WDATE DATE NOT NULL,
   
   DEL NUMBER(1) NOT NULL,      
   READCOUNT NUMBER(8) NOT NULL   
);

CREATE SEQUENCE SEQ_SEMI_BBS
START WITH 1
INCREMENT BY 1;

ALTER TABLE SEMI_BBS
ADD CONSTRAINT FK_SEMI_BBS_ID FOREIGN KEY(ID)
REFERENCES SEMI_MEMBER(ID);

  
ALTER TABLE SEMI_BBS
ADD CONSTRAINT FK_SEMI_BBS_R_SEQ FOREIGN KEY(R_SEQ)
REFERENCES RESTAURANT(SEQ);

----------------------

DROP TABLE RECOMMEND
CASCADE CONSTRAINTS;

DROP SEQUENCE SEQ_RECOMMEND;

CREATE TABLE RECOMMEND(
   SEQ NUMBER(8) PRIMARY KEY,
   
   TITLE VARCHAR2(200) NOT NULL,
   CONTENT VARCHAR2(4000) NOT NULL,
   
   DEL NUMBER(1) NOT NULL,      
   READCOUNT NUMBER(8) NOT NULL   
);

CREATE SEQUENCE SEQ_RECOMMEND
START WITH 1
INCREMENT BY 1;